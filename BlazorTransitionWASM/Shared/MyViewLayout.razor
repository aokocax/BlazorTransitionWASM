@inherits TransitionableLayoutComponent

<div class="@transitioningClass" style="width:100%">
    @Body
</div>


@code {
   
    private string transitioningClass => Transition.FirstRender ? "" : Transition.IntoView
        ?(!Transition.Backwards ?  $"slide-up" : $"slide-down")
         :(!Transition.Backwards ? $"slide-up-out" :$"slide-down-out");
}